
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
<div id="slider">
  <%= render :partial => 'slider' %>
</div>

<h1>Cake Catalog</h1>

<% cache ['store', Product.latest] do %>
   <% @products.each do |product| %>
        <%cache ['entry', product] do %>
         <div class="entry">
           <h3><%=link_to product.title , product_path(product.id)  %></h3>
               <p class="leftimg"> <%= image_tag(product.image_url) %></p>
           <div class="descript"><%= truncate(strip_tags(product.description), length: 30)%></div>
          <div class="price_container">
          <span ><%= number_to_currency(product.price) %></span>
            <%= button_to 'В Корзину', line_items_path(product_id: product), remote: true, :class => "button tiny" %>
      </div>
    </div>
        <% end %>
    <% end %>
<% end %>
<div class="pagination">

  <%= will_paginate @products,previous_label: h("<"), next_label: h(">") %>

   </div>
