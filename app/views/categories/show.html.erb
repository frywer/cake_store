<p id="notice"><%= notice %></p>








<div id="store_content">


    <div class="border_title">
        <h1 class="category_main_title"><%= @category.title %></h1>

      <ul class="bxslider">
        <li><img src="http://patacakesurrey.co.uk/wp-content/uploads/2015/02/slider1.png" title="Funky roots" /></li>
        <li><img src="http://www.ilovebloomsburys.com/images/slides/10.png" title="The long and winding road" /></li>
        <li><img src="http://www.rewardsnetwork.com/wp-content/uploads/2015/09/OctNov_main4.jpg" title="Happy trees" /></li>
        <li><img src="https://sylvialim.files.wordpress.com/2012/06/cropped-strawberry20desserts.jpg" title="Happy trees" /></li>
      </ul>




      </div>




<% @category.cake_categories.each do |sub_category|%>

      <fieldset>
        <legend>
          <a name="<%=sub_category.id%>"></a>
          <%= sub_category.title%>
        </legend>








      <% sub_category.products.each do |product|%>
        <%= link_to(product) do %>
            <div class="product_container">
              <div class="product_image_content"> <%= image_tag product.product_image.to_s  %></div>
              <div class="short_bod"> <%= image_tag "sep.png"%></div>
              <h5 class="product_title_style"><%= product.title  %></h5>
            </div>
        <%end%>


      <%end%>
      </fieldset>

       <div style="clear: both"></div>



<%end%>



</div>

<%= render "layouts/round_blocks"%>