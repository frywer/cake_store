<%= form_for @painting, :html => {:multipart => true} do |f| %>

    <%= f.hidden_field :gallery_id %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :gallery_id %><br>
    <%= f.text_field :gallery_id %>
  </div>
    <p>
      <%= f.file_field :image %>
    </p>
    <%= f.label :remote_image_url, "or image URL" %><br />
    <%= f.text_field :remote_image_url %>
    <p>

    </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
